Main

 DECLARE :double diameter 
 DECLARE PI : DOUBLE= 3.14
 DECLARE : double lengthRectangle,widthRectangle,base,height
 DECLARE : double aCircle,aRectangle,aTriangle
 DECLARE : int aCircleInM,aRectangleInM,aTriangleInM
 DECLARE : int aCircleInCm,aRectangleInCm,aTriangleInCm
 DECLARE : double aCircleInMm,aRectangleInMm,aTriangleInMm
 DECLARE : int SelectShape

OUTPUT : "Area of Circle is: " , "Area of Rectangle is :" , Area of Triangle is :" , "Good Bye" .

OUTPUT:"Enter one option from the following : Circle=1,Rectangle=2,Triangle=3 or Exit=4"

INPUT: diameter ,lengthRectangle,widthRectangle,base, height 
Do
IF (SelectShape = 1)

THEN
OUTPUT  "Enter diameter's of circle (in cm) "

INPUT diameter
aCircle= PI * (diameter/2)*( diameter/2)
aCircleInM=(int)aCircle/10000
aCircleInCm=(int)aCircle%10000
aCircleInMm=(double)((aCircle-(int)aCircle)*100)

OUTPUT  "Area of circle is:"+aCircleInM+"msq"+aCircleInCm+"cmsq"+Math.floor(aCircleInMm*100)/100+"mmsq"

 ELSE IF ( SelectShape=2)

THEN 

 OUTPUT "Enter Length of rectangle(in cm) "

INPUT LengthRectangle

OUTPUT "Enter width of rectangle (in cm)"

INPUT WidthRectangle


aRectangle=lengthRectangle*widthRectangle
aRectangleInM=(int)aRectangle/10000
aRectangleInCm=(int)aRectangle%10000
aRectangleInMm=(double)((aRectangle-(int)aRectangle)*100)


OUTPUT "Area of rectangle is:"+aRectangleInM+"msq"+aRectangleInCm+"cmsq"+Math.floor(aRectangleInMm*100)/100+"mmsq"

ELSE IF ( SelectShape=3)
THEN 

OUTPUT "Enter base of triangle (cm) 

INPUT base

OUTPUT "Enter height of triangle(cm) 

INPUT height

aTriangle=(base*height)/200
aTriangleInM=(int)aTriangle/10000
aTriangleInCm=(int)aTriangle%10000
aTriangleInMm=(double)((aTriangle-(int)aTriangle)*100)


OUTPUT "Area of triangle is:"+aTriangleInM+"msq"+aTriangleInCm+"cmsq"+Math.floor(aTriangleInMm*100)/100+"mmsq"







END IF
END IF
END IF
ENDWHILE
IF 
 (SelectShape<> 4)

ELSE 
 END MAIN











